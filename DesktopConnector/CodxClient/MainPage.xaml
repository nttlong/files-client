<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CodxClient.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    MaximumHeightRequest="500"
    MaximumWidthRequest="500">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">
            <CollectionView x:Name="OfficeToolsList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Padding="10">
                            <Label FontAttributes="Bold" Text="{Binding AppName}" />
                            <Label Margin="0,5,0,0" Text="{Binding Description}" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button
                x:Name="CloseBtn"
                Clicked="CloseBtn_Clicked"
                HorizontalOptions="End"
                SemanticProperties.Hint="{DynamicResource ExitHint}"
                Text="{DynamicResource Exit}" />


        </VerticalStackLayout>
    </ScrollView>


</ContentPage>

